<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tp_puissance4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
      <children>
         <PerspectiveCamera />
          <Button onAction="#onHelloButtonClick" text="Hello!" textAlignment="CENTER" />
      </children>
   </FlowPane>
   <FlowPane alignment="TOP_CENTER" layoutX="30.0" layoutY="30.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
      <children>
         <PerspectiveCamera />
         <Label fx:id="welcomeText" alignment="BOTTOM_LEFT" textAlignment="CENTER" />
      </children>
   </FlowPane>
</VBox>
